<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.view.MainActivity">

    <!--TEXT VIEW-->
    <TextView
        android:id="@+id/permissions_denied_text"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.65"
        android:layout_height="wrap_content"
        android:text="@string/required_location_permission_title"
        android:textSize="36sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/permissions_denied_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.85"
        android:text="@string/grant_permissions_manually_desc"
        android:textSize="16sp"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toBottomOf="@id/permissions_denied_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/restart_app_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:text="@string/restart"
        android:layout_marginTop="30sp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toBottomOf="@+id/permissions_denied_desc"
        app:layout_constraintStart_toStartOf="parent" />

    <!--LOGO-->
    <ImageView
        android:id="@+id/salbox_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/salbox_logo_alt"
        android:src="@drawable/salbox_logo_font_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>